extends ../../layouts/default-login-host

block head
  - var pageTitle = 'SpacePool - HOST My rental offers New Space Step 4'

block header
  -var headerClass = '_border'

block content
  +page-header._wide-lg._hpad._nowrap
    .container
      +e.wrapper
        +page-header-side._md-fx
          +link-icon('back')._no-shadow._back._bold.__back(href="#") Back to previous step
        +page-header-main
          +breadcrumbs-form.hide-md
            +breadcrumbs(['Home', 'My offers', 'Create new Space']).__navigation
            +e.step <b>Step 4</b> Photos
          +e.links
            +link-icon('save')(href="#")._no-shadow._icon_gray-dark._icon_pad30._bold.__link All changes saved
      +progress(57.1)
  +content-origin._wide-lg._reverse._last
    .container
      +e.wrapper
        +content-column-aside._sml-pad
          +side-navigation('Add photos for your Space. It is highly reccomended to upload Landscape photos')._pt46
            +page-info.__info
              +page-info-image
                +icon('photo').icon_photo._grad3
              +page-info-title._mg62 Photos
              +page-info-description Step 4 <i>of 7</i>
        +content-column-main._no-ptop
          +form()._white._flex._pb2.js-form-with-hidden-panel(data-validated-form)
            +e.container_pds
              +form-section._mg65
                +form-section-header._mg26._fx-sb
                  +form-section-title Space photos
                  +form-section-text._bold._fz18._dark(data-file-counter) 0 / 25
                +uploader-output.is-empty
            +e.panel_fixed._fixed_visible(data-hidden-panel)
              .container
                +grid.grid_big.grid_notop
                  +col({ xl: 3, md: 12 })
                  +col({ xl: 9, md: 12 })
                    +form-panel.__panel_border
                      +link-icon('select-arrow', 'a')(href="#")._back._bold._no-shadow.__button Back
                      +button-icon('button', 'select-arrow')(type="submit" disabled).__button_wide Next


block panels
  +main-menu-inner
    +nav-list(getData('main-menu-user.json'))
