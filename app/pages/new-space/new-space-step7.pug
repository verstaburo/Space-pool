block head
  - var pageTitle = 'SpacePool - HOST My rental offers New Space Step 7'

block header
  -var headerClass = '_border'

block content
  +page-header._wide-lg._hpad
    .container
      +e.wrapper
        +page-header-side
          +link-icon('select-arrow')._no-shadow._back._bold.__back(href="#") Back to previous step
        +page-header-main._main_mgt
          +breadcrumbs-form
            +breadcrumbs(['Home', 'My offers', 'Create new Space']).__navigation.hide-md
            +e.step <b>Step 7</b> Publish
          +e.links
            +link-icon('save')(href="#")._no-shadow._icon_gray-dark._icon_pad30._bold.__link All changes saved
      +progress(100)
  +content-origin._wide-lg._reverse._last
    .container
      +section._white._pt
        +section-content._form2._flex
          +e.column_info._mr
            +e.heading
              +content-zone._light
                P This is how it looks in the list:
          +e.column_rborder._stretch._mr.hide-md
          +e.column_hints.hide-md
        +section-content._form2._flex._pb75
          +e.column_info._mr._md-mb80
            +space-info
              +grid.grid_layout
                +col({ xl: 12, md: 6, sm: 12})
