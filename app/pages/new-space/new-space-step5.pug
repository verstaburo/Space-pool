extends ../../layouts/default-login-host

block head
  - var pageTitle = 'SpacePool - HOST My rental offers New Space Step 5';

block header
  - var headerClass = '_border';

block content
  +page-header._wide-lg._hpad._nowrap
    .container
      +e.wrapper
        +page-header-side._md-fx
          +link-icon('back')._no-shadow._back._bold.__back(href="#") Back to previous step
        +page-header-main
          +breadcrumbs-form.hide-md
            +breadcrumbs(['Home', 'My offers', 'Create new Space']).__navigation
            +e.step <b>Step 5</b> Rules and additional terms
          +e.links
            +link-icon('save')(href="#")._no-shadow._icon_gray-dark._icon_pad30._bold.__link All changes saved
      +progress(71.4)
  +content-origin._wide-lg._reverse._last
    .container
      +e.wrapper
        +content-column-aside._sml-pad
          +side-navigation('Space rules is important to make your tenants become a part of a friendly working space')._pt46
            +page-info.__info
              +page-info-image
                +icon('rules').icon_rules._grad4
              +page-info-title Space Rules and additional terms
              +page-info-description Step 5 <i>of 7</i>
        +content-column-main._no-ptop
          +form()._white._flex._pb2.js-form-with-hidden-panel(data-validated-form)
            +e.container_pb120
              +form-section._sm-mg
                +e.row
                  +e.column_access
                    +form-section-wrapper
                      +checkbox('access', '24hours').js-access-toggle 24 Hour Access
                  +e.column_stretch
                    +grid.grid_bigger.grid_int28
                      +col({xl: 6, sm: 12})
                        +form-section-wrapper._separator2
                          +form-box('Space work time from')
                            +select.js-select-input(name="workTimeFrom" required).js-access-from
                              option(value="" placeholder) Space work time from
                              - for (var i = 0; i <= 24; i++)
                                - var time = `${i}:00`;
                                option(value=time)= time
                      +col({xl: 6, sm: 12})
                        +form-section-wrapper
                          +form-box('Till')
                            +select.js-select-input(name="workTimeTill" required).js-access-till
                              option(value="" placeholder) Till
                              - for (var i = 0; i <= 24; i++)
                                - var time = `${i}:00`;
                                option(value=time)= time
              +form-section._mid-mg
                +form-section-wrapper
                  +form-box('Basic space rules (optional)', '', '', '', '', '400')
                    +textarea(type="text" name="basicRules" placeholder="Basic space rules (optional)" rows="1" required maxlength="400").js-textarea-counter
              +form-section
                +e.row
                  +e.column_rules
                    +form-section-header._mg24
                      +form-section-title('h5')._small Basic Rule points (optional)
                    +form-section-content()(data-deleted-group data-point-group)._extended
                      +button-plus-thin.js-add-object
                      +form-section-wrapper()._mg29(data-deleted-object data-point-object)
                        +form-box-removable('')._icon
                          +input(type="text" name="rules[0]" placeholder="Rule" value="Pets allowed").input_points
                      +form-section-wrapper()._mg29(data-deleted-object data-point-object)
                        +form-box-removable('')._icon
                          +input(type="text" name="rules[1]" placeholder="Rule" value="Entrance only by electornic key").input_points
                      +form-section-wrapper()._mg29(data-deleted-object data-point-object)
                        +form-box-removable('')._icon
                          +input(type="text" name="rules[2]" placeholder="Rule" value="Silent time from 10PM till 8 AM").input_points
                      +form-section-wrapper()._mg29(data-deleted-object data-point-object)
                        +form-box-removable('')._icon
                          +input(type="text" name="rules[3]" placeholder="Rule").input_points
                  +e.column_stretch
                    +content-zone._mid2._pr
                      h5 Example for Space Rules:
                      p The building starts to work at 8:00 am, workers can come at 8:30 am. Cleaning every day starts at 9pm. Car parking available for clients within 1 hour, afterwards parking will be charged 5 pounds per hour.
                      ul
                        li No dancing
                        li No swearing
                        li Be eco friendly
                        li Leve the bikes on parking lot
            +e.panel_fixed._fixed_visible(data-hidden-panel)
              .container
                +grid.grid_big.grid_notop
                  +col({ xl: 3, md: 12 })
                  +col({ xl: 9, md: 12 })
                    +form-panel.__panel_border
                      +link-icon('select-arrow', 'a')(href="#")._back._bold._no-shadow.__button Back
                      +button-icon('button', 'select-arrow')(type="submit").__button_wide Next


block panels
  +main-menu-inner
    +nav-list(getData('main-menu-user.json'))
