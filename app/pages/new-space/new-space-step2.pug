extends ../../layouts/default-login-host

block head
  - var pageTitle = 'SpacePool - HOST My rental offers New Space Step 2'

block header
  -var headerClass = '_border'

block content
  +page-header._wide-lg._hpad
    .container
      +e.wrapper
        +page-header-side
          +link-icon('select-arrow')._no-shadow._back._bold.__back(href="#") Back to space list
        +page-header-main._main_mgt
          +breadcrumbs-form
            +breadcrumbs(['Home', 'My offers', 'Create new Space']).__navigation.hide-md
            +e.step <b>Step 2</b> Title and Description
          +e.links
            +link-icon('save')(href="#")._no-shadow._icon_gray-dark._icon_pad30._bold.__link All changes saved
      +progress(28.6)
  +content-origin._wide-lg._reverse._last
    .container
      +e.wrapper
        +content-column-aside.hide-md
          +side-navigation('Fill the basic information about your Space. Provide short description and basic space rules.')._pt46
            +page-info.__info
              +page-info-image
                +icon('strings').icon_strings._grad2
              +page-info-title Space title and description
              +page-info-description Step 2 <i>of 7</i>
        +content-column-main._no-ptop


block panels
  +main-menu-inner
    +nav-list(getData('main-menu-user.json'))
