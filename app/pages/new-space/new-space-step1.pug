extends ../../layouts/default-login-host

block head
  - var pageTitle = 'SpacePool - HOST My rental offers New Space Step 1'

block header
  -var headerClass = '_border'

block content
  +page-header._wide-lg._hpad
    .container
      +e.wrapper
        +page-header-side
          +link-icon('select-arrow')._no-shadow._back._bold.__back(href="#") Back to space list
        +page-header-main._main_mgt
          +breadcrumbs-form
            +breadcrumbs(['Home', 'My offers', 'Create new Space']).__navigation.hide-md
            +e.step <b>Step 1</b> Specify Location
          +e.links
            +link-icon('save')(href="#")._no-shadow._icon_gray-dark._icon_pad30._bold.__link All changes saved
      +progress(14.3)
  +content-origin._wide-lg._reverse._last
    .container
      +e.wrapper
        +content-column-aside.hide-md
          +side-navigation('Please use the map. Click on map and drag it until the geo tag reaches your Space location. ')._pt46
            +page-info.__info
              +page-info-image
                +icon('location').icon_location._grad1
              +page-info-title Specify place <br> location
              +page-info-description Step 1 <i>of 7</i>
        +content-column-main._no-ptop
          +location
            +button-icon('button', 'select-arrow')._short._wide(type="submit") Continute to Step 2

block panels
  +main-menu-inner
    +nav-list(getData('main-menu-user.json'))
