extends ../../layouts/default-login

block head
  - var pageTitle = 'SpacePool - Profile | Company details'

block header
  -var headerClass = '_border'

block content
  +content-origin._reverse
    .container
      +e.wrapper
        +content-column-aside._ptop.hide-lg
          +side-navigation('Change your personal info, password and notification options here')
            +nav-list-sidebar(getData('side-menu-host2.json'), 'Profile & Settings').__navigation
        +content-column-main
          +filter-select.__filter.js-offer-select
            +filter-select-head.hide-from-sm
              +filter-select-label.color-radio_full._dark._fz25._sm-noundr
                div.color-radio__content KYC
            +filter-select-dropdown
              +filter-select-header.hide-from-sm Settings
              +filter-select-item._mr56
                +b.A.link_light-underline._mark.__link(href="#" data-select-value)
                  +e.SPAN.text Basic account information
              +filter-select-item._mr56
                +b.A.link_light-underline._mark.__link.is-new(href="#" data-select-value)
                  +e.SPAN.text Company details
                  +indicator._sm-small.__marker 1
              +filter-select-item._mr56
                +b.A.link_light-underline._mark.__link.is-select(href="#" data-select-value)
                  +e.SPAN.text KYC
                  +indicator._sm-small.__marker 1
          +section
            +section-header
              +e.text_fz14._gray Provide information about your company. All images must be of sufficient resolution and quality to ensure that the information is legible and not misread.
            +section-content
              +grid.grid_big.grid_int59
                +col({xl: 4, sm: 12})
                  +files-card({check: true, subtitle: 'Upload', title: 'Identity proof', uploader: 'is-ready', describe: 'Document should refer to the individual duly empowered to act on behalf of the legal entity. ID card: Front AND Back (Valid) OR Passport (Valid)'})
                +col({xl: 4, sm: 12})
                  +files-card({check: true, subtitle: 'Upload', title: 'Articles of Association', uploader: ' ', describe: 'Certified articles of association (Statute) - formal memorandum stated by the entrepreneurs, in which the following information is mentioned: business name, activity, registered address, shareholding…'})
                +col({xl: 4, sm: 12})
                  +files-card({check: true, subtitle: 'Upload', title: 'Registration Proof', uploader: ' ', describe: 'Extract from the Company Register issued within the last three months'})
          +section
            +section-header
              +e.text_fz14._gray You must add information about <b>at least one</b> Ultimate Beneficial Owner (UBO) - Maximum 4 UBO’s
            +section-content
              +form._pb._negative-mg.js-form-with-hidden-panel(data-validated-form)
                +form-section._mg90
                  +form-section-header._mg67
                    +form-section-title._fz24 UBO <span data-ubo-number>1<span> (Ultimate Beneficial Owner)
                  +grid.grid_big.grid_int59.grid_c9
                    +col({xl: 4, md:9 })
                      +form-section-wrapper
                        +form-box('First name')
                          +input(type="text" name="firstName[1]" value="Eugene" placeholder="First name")
                    +col({xl: 5, md:9 })
                      +form-section-wrapper
                        +form-box('Last name')
                          +input(type="text" name="lastName[1]" value="Sheeleen" placeholder="Last name")
                    +col({xl: 2, md:4, sm: 9 })
                      +form-section-wrapper
                        +form-box('Date of birth', 'calendar2')._icon
                          +input.js-datepicker(type="text" name="birthDate[1]" placeholder="Date of birth" readonly="readonly")
                    +col({xl: 2, md:5, sm: 9 })
                      +form-section-wrapper
                        +form-box('Nationality')
                          +select.js-select-input(name="nationality[1]")
                            option(value="" placeholder) Nationality
                            option(value="eng") English
                            option(value="rus") Russians
                            option(value="ger") Germans
                            option(value="lat") Latvians
                    +col({xl: 2, md:4, sm: 9 })
                      +form-section-wrapper
                        +form-box('Birthplace country')
                          +select.js-select-input(name="birthplaceCountry[1]")
                            option(value="" placeholder) Birthplace country
                            option(value="lv") Latvia
                            option(value="ru") Russia
                            option(value="de") Germany
                            option(value="fr") France
                    +col({xl: 3, md:5, sm: 9 })
                      +form-section-wrapper
                        +form-box('Birthplace city')
                          +input(type="text" name="birthplaceCity[1]" placeholder="Birthplace city")
                    +col({xl: 4, md:9 })
                      +form-section-wrapper
                        +form-box('Legal Adress Line 1')
                          +input(type="text" name="legalAdressL1[1]" placeholder="Legal Adress Line 1")
                    +col({xl: 5, md:9 })
                      +form-section-wrapper
                        +form-box('Legal Adress Line 2')
                          +input(type="text" name="legalAdressL2[1]" placeholder="Legal Adress Line 2")
                    +col({xl: 4, md:9 })
                      +form-section-wrapper
                        +form-box('Country')
                          +select.js-select-input(name="country[1]")
                            option(value="" placeholder) Country
                            option(value="lv") Latvia
                            option(value="ru") Russia
                            option(value="de") Germany
                            option(value="fr") France
                    +col({xl: 5, md:9 })
                      +form-section-wrapper
                        +form-box('City')
                          +input(type="text" name="city[1]" placeholder="City")
                    +col({xl: 4, md:9 })
                      +form-section-wrapper
                        +form-box('Borough')
                          +input(type="text" name="borough[1]" placeholder="Borough")
                    +col({xl: 5, md:9 })
                      +form-section-wrapper
                        +form-box('Postcode')
                          +input(type="text" name="postCode[1]" placeholder="Postcode")
                +form-section._mg90
                  +grid.grid_big.grid_int59.grid_c9
                    +col({xl: 4, md:9 })
                      +form-section-wrapper
                        +link-icon('plus-thin')._underline._bold._icon_right._icon_right_pr50._no-shadow.__link Add one more UBO
                    +col({xl: 5, md:9 })
                      +form-section-wrapper
                        +button('button')._short.__button(type="submit") Send UBO Statement



block panels
  +main-menu-inner
    +nav-list(getData('main-menu-host2.json'))

block popups
  +popup-password-change#popup-password-change
