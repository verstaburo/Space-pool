extends ../../layouts/redesign-default

block head
  - var pageTitle = 'Spacepool - Guest Account'

block bodyClasses
  - var bodyCls = ' is-sm-noheader';

block header
  - var headerClass = ' is-login'
  - var pageClass = ''
  - var isMap = false
  - var host = false

block content
  +nd-page-header._grid._grid_acc
    .nd-container
      +nd-page-header-side
        +nd-link-icon('arrow5')._back.__back.nd-hide-from-sm Back
      +nd-page-header-main
        - var menuList = getData('sideNavProfile.json').menu;
        +e.dt-menu.nd-hide-md
          +nd-breadcrumbs([["Home", "#"], ["My account", "#"], ["Shortlist"]]).__breadcrumbs
        +e.mb-menu.nd-hide-from-md
          +slider-navigation(menuList, 2, 'Shortlist')

  +nd-content
    .nd-container
      +nd-content-aside
        +sidebar.nd-sidebar.nd-hide-md
          - var nav = getData('sideNavProfile.json')
          +nd-side-navigation(nav, 'Shortlist')._profile

      +nd-content-main
        +nd-section
          +nd-section-header
            +nd-section-title Shortlisted 7 hot desks
            +e.menu
              +slider-navigation([{name: "Hot desks", href: "#"}, {name: "Fixed desks", href: "#"}, {name: "Meeting Rooms", href: "#"}, {name: "Private Offices", href: "#"}], 0, 'Hot desks')
          +nd-results._shortlist.__results
            each item in getData('nd-spaces-shortlist.json')
              +nd-results-item
                +nd-space()._search-offer
                  +e.head
                    +space-type._big._gray.__type
                      +nd-box()(class=item.type.box + ' __box')
                      +e.name!=item.type.name
                    +nd-space-title()!=item.title
                    +e.heart.is-active
                      +icon('nd-favorite')
                  +offer-slider(item.offers).__offer-slider

