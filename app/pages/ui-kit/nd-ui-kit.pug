extends ../../layouts/redesign-default

block head
  - var pageTitle = 'SpacePool - Ui-kit'

block content
  +ui-kit
    +e.navigation.js-scrollbar-light
      +e.navigation-burger
      +e.UL.navigation__list

    +ui-kit-head
      p Logo in header .nd-logo
      br
      +nd-logo
      br
      p Logo in footer .nd-logo_footer
      br
      +nd-logo._footer
      +e.name SpacePool new design

    //- Хэдер
    +ui-section
      +ui-nd-section-head
        h2 Хэдер (Header)
        p Блок: components/header
        p Состояние при логине хэдеру добавляется класс is-login
        +nd-button(onclick="$('.header').toggleClass('is-login')") Log In

    //- Шрифты и контентная зона
    +ui-section
      +ui-section-head
        h2 Шрифты и контентная зона
        p Основной шрифт: ProximaNova ($font-main), font-weight: 100, 300, 400, 500, 600, 700, 800
        p Дополнительные шрифты: Stolzl ($font-stolzl) и Stolzl Book ($font-stolzl-book), font-weight: 400, 500
        p Переменные находятся в файле styles/helpers/_variables.scss
        p Шрифты подключены в styles/helpers/_fonts.scss
        p Контентная зона: blocks/content-zone
      +ui-section-content()
        +ui-description .content-zone
        +ui-special()
          +content-zone
            h1 Заголовок H1 (heading-1)
            h2 Заголовок H2 (heading-2)
            h3 Заголовок H3 (heading-3)
            h4 Заголовок H4 (heading-4)
            h5 Заголовок H5 (heading-5)
            h6 Заголовок H6 (heading-6)
            p Текст p (text)<br> Цитата внутри текста p: <q>Цитата q</q>
            p <small>Тег small внутри p (text-small)</small>
            p ссылка внутри текста
              a(href="#") ссылка
            blockquote Цитата blocquoute
            ul
              li Элемент списка
                ul
                  li Элемент списка
                  li Элемент списка
                  li Элемент списка
              li Элемент списка
              li Элемент списка

    +ui-section
      +ui-section-head
        h2 Scroll form
        p Блок: blocks/scroll-form
      +ui-section-content()
        +grid
          +col(3)
            +scroll-form

    //- Кнопки
    +ui-section
      +ui-section-head
        h2 Кнопки
        p Блок: blocks/button
      +ui-section-content()
        +ui-elements-list()
          +nd-button()(href="#") .nd-button
          +nd-button()(href="#")._border .nd-button_border
          +nd-button('button')(disabled) .nd-button:disabled
          +nd-button()._border.is-disabled(href="#") .nd-button.is-disabled (если ссылка)
          +nd-button-icon('', 'select-arrow')(href="#") .nd-button_icon
        +ui-description Кнопки с лоадером
          +nd-button('', true)(href="#").is-loading .button.is-loading
          +nd-button('', true)(href="#")._border.is-loading .button_border.is-loading
        +ui-description При клике на .js-anchor происходит скролл к элементу из атрибута href. Блок: blocks/js-functions/anchor.js
        +nd-button()(href="#section0").js-anchor .js-anchor
        +ui-description При клике на .js-freeze скролл страницы блокируется, на .js-unfreeze разблокируется. Блок: blocks/js-functions/freeze.js. Функции freeze() и unfreeze() можно импортировать и использовать в модалках, бургере или где-то еще
        +ui-elements-list()
          +nd-button()(href="#").js-freeze .js-freeze
          +nd-button()(href="#").js-unfreeze .js-unfreeze





block panels
  +main-menu


  script
    |
    | $('.ui-kit__section').each(function (i) {
    |   var id = 'section' + i;
    |   var name = $(this).find('.ui-kit__section-head h2').text();
    |   var li = $('<li></li>');
    |   var a = $('<a></a>');
    |
    |   a.attr('href', '#'+id).text(name).addClass('js-anchor');
    |   li.append(a);
    |
    |   $('.ui-kit__navigation__list').append(li);
    |   $(this).attr('id', id);
    | });
