extends ../../layouts/redesign-default

block head
  - var pageTitle = 'Spacepool - Space Edit - Terms and conditions'

block bodyClasses
  - var bodyCls = ' is-sm-noheader';
  - var isNoFooter = true

block header
  - var headerClass = ' is-login'
  - var pageClass = ''
  - var isMap = true
  - var host = true

block content
  +nd-page-header._grid
    .nd-container
      +nd-page-header-side
        +nd-link-icon('arrow5')._underline._back.__back Back
      +nd-page-header-main
        - var menuList = getData('sideNavEditSpace.json').menu;
        +e.mb-menu.nd-hide-from-md
          +slider-navigation(menuList, 5, 'Terms and conditions')

  +nd-content
    .nd-container
      +nd-content-aside
        +sidebar-nosticky.nd-sidebar.nd-hide-md
          - var nav = getData('sideNavEditSpace.json')
          +nd-side-navigation(nav, 'Terms and conditions')

      +nd-content-main
        +nd-section('form').js-form-with-hidden-panel(data-validated-form data-submit-disabled)
          +nd-section-header._fx._wrap
            +nd-section-title._fz24 Terms and conditions
            +nd-composite-tabs.__tabs
              +nd-composite-tab().__item
                +composite-tab-checkbox()(data-composite-checkbox)
                  +e.INPUT.input(name="typeOffer", value="hd", type="checkbox" data-composite-activator="offerHD" required)
                  +e.SPAN.box
                +composite-tab-button.is-disabled(data-composite-el="offerHD" data-src-save="#popup-reminder-save" data-src-empty="#popup-reminder-empty") Hot Desk
              +nd-composite-tab().__item
                +composite-tab-checkbox()(data-composite-checkbox)
                  +e.INPUT.input(name="typeOffer", value="fd", type="checkbox" data-composite-activator="offerFD" required)
                  +e.SPAN.box
                +composite-tab-button().is-disabled(data-composite-el="offerFD" data-src-save="#popup-reminder-save" data-src-empty="#popup-reminder-empty") Fixed desk
              +nd-composite-tab()._blue.__item
                +composite-tab-checkbox()(data-composite-checkbox)
                  +e.INPUT.input(name="typeOffer", value="mr", type="checkbox" data-composite-activator="offerMR" required)
                  +e.SPAN.box
                +composite-tab-button().is-disabled(data-composite-el="offerMR" data-src-save="#popup-reminder-save" data-src-empty="#popup-reminder-empty") Meeting room
              +nd-composite-tab().__item
                +composite-tab-checkbox()(data-composite-checkbox)
                  +e.INPUT.input(name="typeOffer", value="os", type="checkbox" data-composite-activator="offerOS" required)
                  +e.SPAN.box
                +composite-tab-button().is-disabled(data-composite-el="offerOS" data-src-save="#popup-reminder-save" data-src-empty="#popup-reminder-empty") Private offices
          +info-grid
            +e.describe
              +e.H3.title_fz22._fw400 Add terms and conditions for every listing type
              +e.text._indent
                p Your listings requires terms and conditions (standart conract) for every listing type. In order to add terms and conditions for listing type, please activate particular type by pushing the Check box near the listing type name.
                p Once you activated listing type, please write (copy and paste) terms and conditions into input field.

            +e.media.hide-sm
              +e.PICTURE.image
                +e.SOURCE(srcset="assets/images/nd/add-space-t&c-mobile.jpg" media="(max-width: 1029px)")
                +e.SOURCE(srcset="assets/images/nd/add-space-t&c.jpg" media="(min-width: 1030px)")
                img(srcset="assets/images/nd/add-space-t&c.jpg")

          +nd-form-panel()._wide._hidden.is-fixed(data-hidden-panel)
            .nd-container
              .nd-content__column_aside.nd-hide-md
              .nd-content__column_main
                +e.controls
                  +nd-link-icon('cross', 'button')(type="reset")._underline.__reset.js-form-reset Discard <span class="nd-hide-sm">changes</span>
                  +nd-button('button', true).__button(type="submit") Save <span class="nd-hide-sm">changes</span>

