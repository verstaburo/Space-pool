          +slider-navigation(menuList, 4, 'Statements')


  +nd-content
    .nd-container
      +nd-content-aside
        +sidebar.nd-sidebar.nd-hide-md
          - var nav = getData('sideNavDealPassRent.json')
          +nd-side-navigation(nav, 'Statements')
      +nd-content-main
        +dashboard
          +board._pad35.__board
            +board-header._align-base
              +board-title('h2')._fz22 Statements
              +e.pay-info
