extends ../../layouts/default

block head
  - var pageTitle = 'SpacePool - Sign Up guest important info'

block content
  +page-header._styled
    +e.bg.hide-md
      +e.IMG.bg-image(src="assets/images/info-account.svg")
    .container
      +grid.grid_layout.grid_content
        +col({ xl: 2, md: 12}).hide-md
        +col({ xl: 10, md: 12})
          +page-title._fx._big
            +e.text Your account was successfully verified
            +icon('check').__check
  +content-origin._reverse._last._mt64
    .container
      +grid.grid_layout.grid_content
        +col({ xl: 2, md: 12}).hide-md
          +steps
            +steps-item.is-success
              +e.top
                +steps-text._sub YOU ARE HERE
              +e.line
                +steps-text Create an account
                +icon('check').__check
            +steps-item.is-active
              +e.top
                +steps-text._sub YOU ARE HERE
              +e.line
                +steps-text Fill important info
                +icon('check').__check
            +steps-item
              +e.top
                +steps-text._sub YOU ARE HERE
              +e.line
                +steps-text Start tenancy
                +icon('check').__check
        +col({ xl: 8, lg: 10, md: 12})
          +form()(data-validated-form)
            +form-section._mg65
              +form-section-header._mg0
                +form-section-title._big._mg48 Please take a moment to complete your host account with important information:
                +form-section-text Fill all the field in this form. This information will be used to create rental contracts aswell it is a part of financial service KYC protocol
            +form-section._mg82
              +form-section-content
                +form-section-header._mg42
                  +form-section-title('h4') Please choose an option
                +grid.grid_big.grid_big_sm-gap20.grid_int59
                  +col({xl: 6 })
                    +form-toggle({radio: {checked: true, name: "personType", value: "privatePerson", show: "person", hide: "entity"}, check: true, subtitle: "Continues registration as&nbsp;a ", title: "Private person", describe: "If you are a freelancer, an individual employee or rent an office for yourself privately. Then this option is for you!"})._v2.__switch
                  +col({xl: 6 })
                    +form-toggle({radio: {name: "personType", value: "legalEntity", show: "entity", hide: "person"}, check: true, subtitle: "Continues registration as&nbsp;a ", title: "Legal entity", describe: "Register as a legal entity if you plan to rent an office for your company or the company you work for."})._v2.__switch
            +form-section._mg88(data-form-element="person")
              +form-section-header._mg62
                +form-section-title Please fill the form to continue
              +grid.grid_big.grid_int59
                +col({xl: 6, md:12 })
                  +form-section-wrapper
                    +form-box('First name')
                      +input(type="text" name="firstName" value="Eugene" placeholder="First name")
                +col({xl: 6, md:12 })
                  +form-section-wrapper
                    +form-box('Last name')
                      +input(type="text" name="lastName" value="Sheeleen" placeholder="Last name")
                +col({xl: 6, md:12 })
                  +form-section-wrapper
                    +form-box('Date of birth', 'calendar2')._icon
                      +input.js-datepicker(type="text" name="birthDate" placeholder="Date of birth" readonly="readonly" data-mindate='')
                +col({xl: 3, md:6, sm: 12 })
                  +form-section-wrapper
                    +form-box('Nationality')
                      +select.js-select-input(name="nationality")
                        option(value="" placeholder) Nationality
                        option(value="eng") English
                        option(value="rus") Russians
                        option(value="ger") Germans
                        option(value="lat") Latvians
                +col({xl: 3, md:6, sm: 12 })
                  +form-section-wrapper
                    +form-box('Country of Residence')
                      +select.js-select-input(name="countryResidence")
                        option(value="" placeholder) Country of Residence
                        option(value="lv") Latvia
                        option(value="ru") Russia
                        option(value="de") Germany
                        option(value="fr") France
                +col({xl: 6, md:12 })
                +col({xl: 6, md:12 })
                  +form-section-wrapper
                    +button('button')(type="submit")._wide._short Finish registration
            +form-section._mg121.hide(data-form-element="entity")
              +form-section-content
                +form-section-header._mg44
                  +form-section-title('h4') Fill the form to continue
                +grid.grid_big.grid_int59
                  +col({xl: 6, md:12 })
                    +form-section-wrapper
                      +form-box('Your name')
                        +input(type="text" name="entityName" placeholder="Your name" required="required")
                  +col({xl: 6, md:12 })
                    +form-section-wrapper
                      +form-box('Your Surname')
                        +input(type="text" name="entitySurname" placeholder="Your Surname" required="required")
                  +col({xl: 12 })
                    +form-section-wrapper
                      +form-box('Company name')
                        +input(type="text" name="companyName" placeholder="Company name" required="required" value="DEZI Co-working")
                  +col({xl: 6, md:12 })
                    +form-section-wrapper
                      +form-box('Company Number')
                        +input(type="text" name="companyNum" placeholder="Company Number" required="required")
                  +col({xl: 6, md:12 })
                    +form-section-wrapper
                      +form-box('VAT number (if you have it)')
                        +input(type="text" name="VATnumber" placeholder="VAT number (if you have it)")
                  +col({xl: 6, md:12 })
                    +form-section-wrapper
                      +form-box('Registered Adress Line 1')
                        +input(type="text" name="regAdressL1" placeholder="Registered Adress Line 1" required="required")
                  +col({xl: 6, md:12 })
                    +form-section-wrapper
                      +form-box('Registered Adress Line 2')
                        +input(type="text" name="regAdressL2" placeholder="Registered Adress Line 2" required="required")
                  +col({xl: 6, md:12 })
                    +form-section-wrapper
                      +form-box('Country')
                        +select.js-select-input(name="country")
                          option(value="" placeholder) Country
                          option(value="lv") Latvia
                          option(value="ru") Russia
                          option(value="de") Germany
                          option(value="fr") France
                  +col({xl: 6, md:12 })
                    +form-section-wrapper
                      +form-box('City')
                        +input(type="text" name="city" placeholder="City")
                  +col({xl: 6, md:12 })
                    +form-section-wrapper
                      +form-box('Postcode')
                        +input(type="text" name="postCode" placeholder="Postcode" required="required")
            +form-section._mg88.hide(data-form-element="entity")
              +form-section-header._mg62
                +form-section-title Legal representative information
              +grid.grid_big.grid_int59
                +col({xl: 6, md:12 })
                  +form-section-wrapper
                    +form-box('Company director name')
                      +input(type="text" name="directorName" value="Eugene" placeholder="Company director name")
                +col({xl: 6, md:12 })
                  +form-section-wrapper
                    +form-box('Company director Last name')
                      +input(type="text" name="directorLastName" value="Sheeleen" placeholder="Company director Last name")
                +col({xl: 6, md:12 })
                  +form-section-wrapper
                    +form-box('Date of birth', 'calendar2')._icon
                      +input.js-datepicker(type="text" name="birthDate" placeholder="Date of birth" readonly="readonly" data-mindate='')
                +col({xl: 3, md:6, sm: 12 })
                  +form-section-wrapper
                    +form-box('Nationality')
                      +select.js-select-input(name="nationality")
                        option(value="" placeholder) Nationality
                        option(value="eng") English
                        option(value="rus") Russians
                        option(value="ger") Germans
                        option(value="lat") Latvians
                +col({xl: 3, md:6, sm: 12 })
                  +form-section-wrapper
                    +form-box('Country of Residence')
                      +select.js-select-input(name="countryResidence")
                        option(value="" placeholder) Country of Residence
                        option(value="lv") Latvia
                        option(value="ru") Russia
                        option(value="de") Germany
                        option(value="fr") France
                +col({xl: 6, md:12 })
                  +form-section-wrapper
                    +form-box('Service Adress Line 1')
                      +input(type="text" name="serviceAdressL1" placeholder="Service Adress Line 1")
                +col({xl: 6, md:12 })
                  +form-section-wrapper
                    +form-box('Service Adress Line 2')
                      +input(type="text" name="serviceAdressL2" placeholder="Service Adress Line 2")
                +col({xl: 6, md:12 })
                  +form-section-wrapper
                    +form-box('Country')
                      +select.js-select-input(name="country")
                        option(value="" placeholder) Country
                        option(value="lv") Latvia
                        option(value="ru") Russia
                        option(value="de") Germany
                        option(value="fr") France
                +col({xl: 6, md:12 })
                  +form-section-wrapper
                    +form-box('City')
                      +input(type="text" name="city" placeholder="City")
                +col({xl: 6, md:12 })
                  +form-section-wrapper
                    +form-box('Postcode')
                      +input(type="text" name="postCode" placeholder="Postcode")
                +col({xl: 6, md:12 })
                  +form-section-wrapper
                    +button('button')(type="submit")._wide._short Finish registration
        +col({ xl: 2, lg: 12}).hide-lg

block panels
  +main-menu-inner
    +nav-list(getData('main-menu-user.json'))
