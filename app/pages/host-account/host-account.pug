extends ../../layouts/redesign-default

block head
  - var pageTitle = 'Spacepool - Host Account - Spaces'

block bodyClasses
  - var bodyCls = ' is-sm-noheader';
  - var isNoFooter = true
  - var scripts = ['other']

block header
  - var headerClass = ' is-login'
  - var pageClass = ''
  - var isMap = false
  - var host = true

block content
  +nd-page-header._grid._grid_acc
    .nd-container
      +nd-page-header-side
        +nd-link-icon('arrow5')._back.__back.nd-hide Back
      +nd-page-header-main
        - var menuList = getData('sideNavProfileHost.json').menu;
        +e.mb-menu.nd-hide-from-md
          +slider-navigation(menuList, 0, 'Spaces')

  +nd-content
    .nd-container
      +nd-content-aside
        +sidebar-nosticky.nd-sidebar.nd-hide-md
          - var nav = getData('sideNavProfileHost.json')
          +nd-side-navigation(nav, 'Spaces')._profile._profile_ha

      +nd-content-main
        +nd-section
          +nd-section-header._fx._md-pg-head.nd-hide-sm
            +nd-section-title._fz24 Spaces
            +e.menu
              +slider-navigation([{name: "All spaces", href: "#"}, {name: "Active spaces only", href: "#"}], 0, 'All spaces')
              +nd-button('a')._pad10._h35.__add_mw180._ml56(href="#") Add space
          - var spaces = getData('nd-ha-spaces.json')
          +records.__records_mt40
            each space in spaces
              +space-settings(space).__item_mt40

