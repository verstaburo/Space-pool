extends ../../layouts/redesign-default

block head
  - var pageTitle = 'Spacepool - Host Account - Settings'

block bodyClasses
  - var bodyCls = ' is-sm-noheader';
  - var isNoFooter = true

block header
  - var headerClass = ' is-login'
  - var pageClass = ''
  - var isMap = false
  - var host = true

block content
  +nd-page-header._grid
    .nd-container
      +e.title.nd-hide-from-sm Settings
      +nd-page-header-side
        +nd-link-icon('arrow5')._back._back_md21.__back_md-noname.nd-hide-from-md Back
      +nd-page-header-main
        - var menuList = getData('sideNavProfileHost.json').menu;
        +e.mb-menu.nd-hide
          +slider-navigation(menuList, 3, 'Settings')
        +e.mb-menu.nd-hide-from-md
          +slider-navigation([{name: "Basic information", href: "host-account-settings-basic.html"}, {name: "Password", href: "host-account-settings-password.html"}, {name: "Company details", href: "host-account-settings-company.html"}, {name: "Notification settings", href: "host-account-settings-notifications.html"}], 0)

  +nd-content
    .nd-container
      +nd-content-aside
        +sidebar-nosticky.nd-sidebar.nd-hide-md
          - var nav = getData('sideNavProfileHost.json')
          +nd-side-navigation(nav, 'Settings')._profile._profile_ha

      +nd-content-main
        +nd-section
          +nd-section-header._fx._md-pg-head.nd-hide-md
            +nd-section-title._fz24 Account settings
            +e.menu
              +slider-navigation([{name: "Basic information", href: "host-account-settings-basic.html"}, {name: "Password", href: "host-account-settings-password.html"}, {name: "Company details", href: "host-account-settings-company.html"}, {name: "Notification settings", href: "host-account-settings-notifications.html"}], 0)

          +dashboard._host-account.__dashboard_mt
            +board._pb36.__board_ha._ha_info
              +board-title._fz22 Company details
              +nd-table._info._info_ha.__table
                tbody
                  each row in getData('table-company.json')
                    tr
                      each cell in row
                        if cell.content
                          if cell.content.text
                            td(class=(cell.content.textClass || ''))!= cell.content.text
              +board-title._fz22 Legal representative information
              +nd-table._info._info_ha.__table_mt27
                tbody
                  each row in getData('table-legal.json')
                    tr
                      each cell in row
                        if cell.content
                          if cell.content.text
                            td(class=(cell.content.textClass || ''))!= cell.content.text
              +e.links_mt60
                +nd-link-image('nd-edit')(class='' href='ha-edit-space.html').__link_fw600._fz14 Edit company details
            +board.__board_ha._ha_profile
              +board-title._fz22._tac Basic information
              +profile-info(getData('profile-data1.json'))._center.__profile
            +board._pb36.__board_ha._ha_pass
              +board-title._fz22 Password
              +password-indicator().is-medium.__pass-strength Password stregth
              +e.pass-field
                +nd-form-box('Password')._bg-white
                  +nd-input(type="password" name="Password" placeholder="Password" value="Password" disabled).is-disabled
              +e.links_mt42
                +nd-link-image('nd-edit')(class='' href='ha-edit-space.html').__link_fw600._fz14 Edit account password

