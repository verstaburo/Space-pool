block bodyClasses
  - var bodyCls = ' is-sm-noheader is-sm-no-userpanel';
  - var isNoFooter = true
  - var scripts = ['other']

block header
  - var headerClass = ' is-login'
  - var pageClass = ''
  - var isMap = false
  - var host = true

block content
  +nd-page-header._grid
    .nd-container
      +nd-page-header-side
        +nd-link-icon('arrow5')._back._back_md21.__back_md-noname.__back.nd-hide-from-md Back
      +nd-page-header-main
        - var menuList = getData('sideNavProfileHost.json').menu;
        +e.mb-menu.nd-hide-from-md
          +slider-navigation(menuList, 2, 'Managers')

  +nd-content
    .nd-container
      +nd-content-aside
        +sidebar-nosticky.nd-sidebar.nd-hide-md
          - var nav = getData('sideNavProfileHost.json')
          +nd-side-navigation(nav, 'Managers')._profile._profile_ha

      +nd-content-main
        +nd-section
          +nd-section-header._fx._md-pg-head.nd-hide-sm
            +nd-section-title._fz24 Managers
            +e.menu
              +slider-navigation([{name: "All Managers", href: "host-account-managers.html"}, {name: "Free Managers", href: "#"}, {name: "Active Managers", href: "#"}, {name: "Inactive Managers", href: "host-account-managers-inactive.html"}], 0)
              +nd-button('a')._pad10._h35.__add.is-disabled(href="host-account-managers-invite.html") Add manager

          +e.board_pd-xl
            +e.column_left._pd40
              +nd-section-content
                +nd-section-title._fz22 Your invitation was succesfully sent
                +e.text_mt._fz18
                  p After Manager accepts your invitation he will appear in your <a href="host-account-managers.html">manager list.</a>
              +nd-section-content
                +e.text_fz18
                  p In order to assign manager to any of your space please go to
                  p
                    b Your account - Spaces - Manage Space - Manager
            +e.column_right._right_w580
              +e.FIGURE.figure
                +e.IMG.figure-image(src="assets/images/nd/il-envelope.svg")


