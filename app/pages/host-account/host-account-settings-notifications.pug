extends ../../layouts/redesign-default

block head
  - var pageTitle = 'Spacepool - Host Account - Settings'

block bodyClasses
  - var bodyCls = ' is-sm-noheader';

block header
  - var headerClass = ' is-login'
  - var pageClass = ''
  - var isMap = false
  - var host = true

block content
  +nd-page-header._grid
    .nd-container
      +e.title.nd-hide-from-sm Settings
      +nd-page-header-side
        +nd-link-icon('arrow5')._back._back_md21.__back_md-noname.nd-hide-from-md Back
      +nd-page-header-main
        - var menuList = getData('sideNavProfileHost.json').menu;
        +e.mb-menu.nd-hide-from-md.nd-hide-sm
          +slider-navigation(menuList, 3, 'Settings')
        +e.mb-menu.nd-hide-from-sm
          +slider-navigation([{name: "Basic information", href: "host-account-settings-basic.html"}, {name: "Password", href: "host-account-settings-password.html"}, {name: "Company details", href: "host-account-settings-company.html"}, {name: "Notification settings", href: "host-account-settings-notifications.html"}], 3, 'Notification settings')

  +nd-content
    .nd-container
      +nd-content-aside
        +sidebar-nosticky.nd-sidebar.nd-hide-md
          - var nav = getData('sideNavProfileHost.json')
          +nd-side-navigation(nav, 'Settings')._profile._profile_ha

      +nd-content-main
        +nd-section
          +nd-section-header._fx._md-pg-head.nd-hide-md
            +nd-section-title._fz24 Account settings
            +e.menu
              +slider-navigation([{name: "Basic information", href: "host-account-settings-basic.html"}, {name: "Password", href: "host-account-settings-password.html"}, {name: "Company details", href: "host-account-settings-company.html"}, {name: "Notification settings", href: "host-account-settings-notifications.html"}], 3, 'Notification settings')

          +dashboard('form').__dashboard_mt55.js-form-with-hidden-panel(data-validated-form)
            +board._pad48.__board
              +board-title._fz22 Notification settings
              +nd-table._info._info_subs._fw500.__table_mt68
                thead
                  tr
                    th Reason
                    th Platform notification
                    th Notify via&nbsp;Email
                tbody
                  each row in getData('table-notifications.json')
                    tr
                      each cell in row
                        if cell.content
                          if cell.content.text
                            td(class=(cell.content.textClass || ''))!= cell.content.text
                          if cell.content.switch
                            td
                              +nd-switch(cell.content.switch.data)._light(class=(cell.content.switch.class || ''))

            +nd-form-panel()._wide._hidden.is-fixed(data-hidden-panel)
              .nd-container
                .nd-content__column_aside.nd-hide-md
                .nd-content__column_main
                  +e.controls
                    +nd-link-icon('cross', 'button')(type="reset")._underline.__reset.js-form-reset Discard <span class="nd-hide-sm">changes</span>
                    +nd-button('button', true).__button(type="submit") Save <span class="nd-hide-sm">changes</span>


