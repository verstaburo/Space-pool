mixin burger()
  +b.BUTTON.burger.js-open-navigation&attributes(attributes)
    +e.image
      +e.line

mixin nd-burger()
  +b.BUTTON.nd-burger.js-open-navigation&attributes(attributes)
    +e.image
      +e.line

mixin nd-burger-icon()
  +b.BUTTON.nd-burger.js-open-navigation&attributes(attributes)
    +e.icon
      +icon('nd-menu-burger')
