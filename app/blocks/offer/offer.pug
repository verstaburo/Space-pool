mixin offer(name, value, checked)
  +b.offer&attributes(attributes)
    +e.content
      +e.column_left
        block
      +e.column_right
        +switch(name, value, checked, true).__switch from
          +e.SPAN.price <b>&pound;730</b> pm
        +e.buttons
          +e.button
            +link-icon('pan')._icon_mid-small._bold._light-underline._icon_dark._no-shadow(href="#") Edit offer
          +e.button
            +link-icon('round-cross')._icon_mid-small._bold._light-underline._gray-light._no-shadow(href="#").js-delete-object Delete offer
