mixin nav-list(data)
  +b.UL.nav-list&attributes(attributes)
    each item in data
      - var itemClass = item.class || "";
      +e.LI.item
        +link()(href=item.href class=itemClass)!= item.name


mixin nav-list-sidebar(data, active)
  - var addClass = "";
  +b.UL.nav-list_sidebar&attributes(attributes)
    each item in data
      - if (item.name === active) { addClass = " is-active"; } else { addClass=""; }
      - var itemClass = item.class || "";
      +e.LI.item
        +link()(href=item.href class='_white' + addClass + itemClass)!= item.name
        if item.marker
          +e.marker!= item.marker
