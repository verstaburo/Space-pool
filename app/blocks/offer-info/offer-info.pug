mixin offer-info(tag, price, price2, price2Class)
  +b(tag || 'div').offer-info&attributes(attributes)
    +e.head
      block
    if price
      +e.price!= price
    if (price2 == 'noprice')
      +e.cost N/A
    else if price2
      +e.cost
        +price(price2)(class=price2Class)

mixin offer-info-radio(name, data)
  +b.LABEL.offer-info-radio&attributes(attributes)
    if (data.check)
      if (data.rrdata)
        +input(type="radio" name=name value=data.value checked="checked" data-offer-input="true" data-rr-activator=data.rrdata.activator data-rr-button=data.rrdata.name)
      else
        +input(type="radio" name=name value=data.value checked="checked" data-offer-input="true")
    else
      if (data.rrdata)
        +input(type="radio" name=name value=data.value data-offer-input="true" data-rr-activator=data.rrdata.activator data-rr-button=data.rrdata.name)
      else
        +input(type="radio" name=name value=data.value data-offer-input="true")

    +offer-option(data)(data-select-value class=(data.class || ''))
    //- +offer-info('', price)(data-select-value)
      block
