mixin offer-info(tag, price)
  +b(tag || 'div').offer-info&attributes(attributes)
    +e.head
      block
    +e.price!= price

mixin offer-info-radio(name, value, price, checked)
  +b.LABEL.offer-info-radio&attributes(attributes)
    - if (checked) {
      +input(type="radio" name=name value=value checked="checked" data-offer-input="true")
    - } else {
      +input(type="radio" name=name value=value data-offer-input="true")
    - }
    +offer-info('', price)(data-select-value)
      block
