mixin offer-option(data)
  +b.offer-option&attributes(attributes)
    +e.type
      +box(class=data.boxclass).__box
      +e.title!= data.title
    +e.describe.js-2line
      +e.text!=data.describe
    +e.price
      +e.amount!=data.price.number
      +e.time
        if data.price.time.full
          +e.tfull!=data.price.time.full
        if data.price.time.short
          +e.tshort!=data.price.time.short
        if data.price.time.name
          span!=data.price.time.name
    block
