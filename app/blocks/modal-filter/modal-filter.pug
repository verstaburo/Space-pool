mixin modal-filter()
  +b.modal-filter&attributes(attributes)
    +e.content
      +e.header
        +e.H3.title Filter
        +e.BUTTON.close.js-close-modal-filter(type="button")
          +icon('cross-bold') Close filter
      +e.options
        +e.options-inner
          +e.section_price
            +e.subtitle Price
            +nd-range({output: {minLabel: 'From', maxLabel: 'To', max: 'maxPrice', min: 'minPrice', formboxClass: '_bg-white _h40', inputClass: '_h40'}})(data-start="[0, 10000]" data-connect="[false, true, false]" data-step="10" data-margin="30" data-min="0" data-max="10000" data-currency="Â£" data-modal-filter-item="price")._v2.__range
          +e.section
            +e.subtitle City
            +e.list
              each item in getData('nd-map-city.json')
                +b.LABEL.check-button._hov-blue._pad10._h34._fz13.__check
                  if item.options.checked
                    +e.INPUT.input(name=item.options.name, value=item.options.value, checked, type=item.options.type, data-modal-filter-item="area", data-modal-filter-title=item.name)
                  else
                    +e.INPUT.input(name=item.options.name, value=item.options.value, type=item.options.type, data-modal-filter-item="area", data-modal-filter-title=item.name)
                  +e.SPAN.content!=item.name
          +e.section
            +e.subtitle Area
            +e.list
              each item in getData('nd-map-locations.json')
                +b.LABEL.check-button._hov-blue._pad10._h34._fz13.__check
                  if item.options.checked
                    +e.INPUT.input(name=item.options.name, value=item.options.value, checked, type=item.options.type, data-modal-filter-item="area", data-modal-filter-title=item.name)
                  else
                    +e.INPUT.input(name=item.options.name, value=item.options.value, type=item.options.type, data-modal-filter-item="area", data-modal-filter-title=item.name)
                  +e.SPAN.content!=item.name
          +e.section
            +e.subtitle Space Facilities
            +e.list
              each item in getData('nd-modal-features.json')
                +b.LABEL.check-button._hov-blue._pad10._h34._fz13.__check
                  if item.options.checked
                    +e.INPUT.input(name=item.options.name, value=item.options.value, checked, type=item.options.type data-modal-filter-item="facilities", data-modal-filter-title=item.name)
                  else
                    +e.INPUT.input(name=item.options.name, value=item.options.value, type=item.options.type data-modal-filter-item="facilities", data-modal-filter-title=item.name)
                  +e.SPAN.content!=item.name
      +e.selected
        +e.top
          +nd-link-icon('cross-bold', 'button')._pad10.__clear.js-clear-modal-filter(type="button" disabled) Clear Filter
        +e.bottom
          +nd-button('button')._pad10.__apply.js-apply-modal-filter(type="button") Show result
    block
