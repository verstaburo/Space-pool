mixin slider(pagination, buttons)
  +b.slider&attributes(attributes).swiper-container.js-slider
    .swiper-wrapper
      block
    if pagination
      +e.dots
        +e.dot
    if buttons
      +e.button._prev
      +e.button._next

mixin slide(href)
  .swiper-slide
    +e.slide&attributes(attributes)
      +e.A(href=href).__search.js-fancybox
        +icon('search').__search-img
      block

mixin slide-two()
