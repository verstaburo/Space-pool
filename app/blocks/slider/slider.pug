mixin slider(pagination, buttons)
  +b.slider.slider&attributes(attributes).swiper-container.js-slider
    .swiper-wrapper
      block
    if pagination
      +e.dots
        +e.dot
    if buttons
      +e.button._prev
        +icon('arrow2')
      +e.button._next
        +icon('arrow2') 
      +e.A(href="#").__search
        +icon('search').__search-img

mixin slide(href)
  a(href=href).swiper-slide
    +e.slide&attributes(attributes)
      block

mixin slide-two()
  a(href="#").swiper-slide
    +e.slide&attributes(attributes)
      +icon('heart').__heart
      block

