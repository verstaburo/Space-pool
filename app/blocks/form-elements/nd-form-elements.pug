mixin nd-checkbox(data)
  +b.LABEL.nd-checkbox&attributes(attributes)
    if data.checked
      if data.required
        +e.INPUT.input(name=data.name, value=data.value, checked, type="checkbox", required)
      else if data.checker
        +e.INPUT.input(name=data.name, value=data.value, checked, type="checkbox", data-checker=data.checker)
      else if data.switch
        +e.INPUT.input(name=data.name, value=data.value, checked, type="checkbox", data-form-switch=data.switch)
      else
        +e.INPUT.input(name=data.name, value=data.value, checked, type="checkbox")
    else if data.required
      if data.checker
        +e.INPUT.input(name=data.name, value=data.value, type="checkbox", required, data-checker=data.checker)
      else if data.switch
        +e.INPUT.input(name=data.name, value=data.value, type="checkbox", required, data-form-switch=data.switch)
      else
        +e.INPUT.input(name=data.name, value=data.value, type="checkbox", required)
    else
      if data.checker
        +e.INPUT.input(name=data.name, value=data.value, type="checkbox", data-checker=data.checker)
      else if data.switch
        +e.INPUT.input(name=data.name, value=data.value, type="checkbox", data-form-switch=data.switch)
      else
        +e.INPUT.input(name=data.name, value=data.value, type="checkbox")
    +e.SPAN.box
    if !data.nocontent
      +e.SPAN.content
        block

mixin nd-radio(data, tag)
  +b(tag || 'label').nd-checkradio&attributes(attributes)
    if data.checked
      if data.required
        +e.INPUT.input(name=data.name, value=data.value, checked, type="radio" required)
      else
        +e.INPUT.input(name=data.name, value=data.value, checked, type="radio")
    else if data.required
      +e.INPUT.input(name=data.name, value=data.value, type="radio" required)
    else
      +e.INPUT.input(name=data.name, value=data.value, type="radio")
    +e.SPAN.box
    if !data.nocontent
      +e.SPAN.content
        block

