mixin nd-range(data)
  +b.nd-range&attributes(attributes).js-nd-range
    +e.slider(data-nd-range-container)
    if data.output
      +e.output(data-nd-range-output)
        +e.item
          +nd-form-box(data.output.minLabel)(class=(data.output.formboxClass || ''))
            +nd-input(type="text" name=data.output.min placeholder=data.output.minLabel data-nd-range-input-min class=(data.output.inputClass || ''))
        +e.item
          +nd-form-box(data.output.maxLabel)(class=(data.output.formboxClass || ''))
            +nd-input(type="text" name=data.output.max placeholder=data.output.maxLabel data-nd-range-input-max class=(data.output.inputClass || ''))
    block

