      if data.flag
        +e.flag
          +e.flag-name!= data.flag
    +e.DIV.describe
      if data.boxes
        +boxes.__boxes
          each item in data.boxes
            +box(class='_small ' + item.class)
      +e.title!= data.title
      if data.location
        +e.location!= data.location
    block


