mixin space-reserv(tag, data)
  +b(tag || 'a').space&attributes(attributes)
    if data.type
      +e(class="head " + data.type.color)!= data.type.name
    if data.head
      +e(class="head_base " + data.head.base)!= data.head.name
        +box()(class="_size32 " + data.head.color + " __head-box")
    +e.DIV.media
      +e.IMG.image(src=data.img)
      if data.heart
        +button-heart.js-heart.is-active.__heart(class=data.heart.class)
      if data.heart2
