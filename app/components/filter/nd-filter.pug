    +e.item_back.nd-hide-from-sm
      +e.A.button(href="#")
        +icon('back-arrow').__icon_back.js-layout-close-active
    +e.item
      +modal-output({placeholder: 'Location', default: 'Anywhere'})._special._notoggle._location.js-toggle-modal(data-modal-target="filter-location" data-modal-output-type="city")
    +e.item
      +modal-output({placeholder: 'Office type', default: 'Any'})._special._type._notoggle.js-toggle-modal(data-modal-target="filter-type" data-modal-output-type="offer")
