mixin popup-reminder-empty()
  +popup-free._sm-cross._sm-full.popup-reminder-empty__&attributes(attributes)
    +popup-heading.popup__heading_smpd.popup__heading_sm-col.popup__heading_sb
      +offer-info
        +box._big2._red
        +e.title_dark._fz24 FIXED DESK
      +popup-title.popup__title_mfz12 Terms and conditions
    +popup-content
      +note-exclamation()._fw400._color._fz20.__note Ooops! Looks like you forgot something
      +note(true)._fz30._sm-pmg.__notice
        p You have activated the FIXED DESK service, but have not added any Terms and Conditions.
        p Please choose an option in order to continue:
      +e.buttons
        +button('button')._short._border._border_bg-white._mob-smaller.__button(type="button" data-fancybox-close)
          span.hide-sm Continue without Fixed desk offers
          span.hide-from-sm Continue without FIXED DESKS
        +button('button')._short._mob-smaller.__button(type="button")
          span.hide-sm Add Terms and Conditions
          span.hide-from-sm Add T&C for FIXED DESK
      block
