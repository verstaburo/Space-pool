mixin offer-card()
  +b.SECTION.offer-card&attributes(attributes)
    block

mixin offer-card-header()
  +e.header&attributes(attributes)
    block

mixin offer-card-main()
  +e.main&attributes(attributes)
    block

mixin offer-card-footer()
  +e.footer&attributes(attributes)
    block

mixin offer-card-for-space(item, cls)
  +offer-card()(class=(cls + ' js-show-offer-details' || ' js-show-offer-details'))
    +offer-card-header
      +space-type._gray.__type
        +nd-box()(class=item.type.box + ' __box')
        +e.name!=item.type.name
      +e.info
        +e.period.nd-hide-sm Minimum term: <b>3 months</b>
        +e.state AVAILABLE NOW
    +offer-card-main()(class=(item.plan ? '_private' : ''))
      +e.media
        if item.gallery
          +gallery(item.gallery).__gallery.js-nd-gallery(data-blind-zone)
        if item.image
          +e.PICTURE.image
            option(srcset=item.image)
            img(srcset=item.image)
      +e.H4.title!=item.title
      +e.describe
        +e.summary
          +e.summary-text(data-text=item.shortDescribe)!=item.shortDescribe
        +e.details
          +e.content
            ul
              li Super fast Wifi
              li Community events
              li Mail handling
              li Barista coffee
              li Dog friendly areas
              li Reservation form
          +nd-link._underline.__more.js-sm-show-offer-details.nd-hide-from-sm(href="#")
            span(data-closed) Read more
            span(data-opened) Hide
      if item.plan
        +e.FIGURE.plan
          +e.FIGCAPTION.plan-caption Floor plan
          +e.plan-image
            IMG(src=item.plan)
      +e.price!=(item.price.amount + ' <span class="offer-card__price-period" data-text="' + item.price.period + '" data-mobile-text="' + item.price.periodshort + '"></span>')
      +e.buttons(data-blind-zone)
        +nd-button()._sm-fz15.__button(href="#") Request reservation
        +nd-button()._sm-fz15._black.__button(href="#") Arrange viewing


mixin offer-card-for-space-panel(data)
  +offer-card()._short(class=(data.cls + ' js-show-short-offer-details' || ' js-show-short-offer-details'))
    +offer-card-main()._short
      +e.media
        if data.gallery
          +gallery(data.gallery).__gallery.js-nd-gallery
        if data.image
          +e.PICTURE.image
            option(srcset=data.image)
            img(srcset=data.image)
      +e.H4.title!=data.title
      +e.price!=(data.price.amount + ' <span class="offer-card__price-period" data-text="' + data.price.period + '" data-mobile-text="' + data.price.periodshort + '"></span>')
      +e.buttons(data-blind-zone)
        +nd-button()._h30._md-fz15.__button(href="#") Request reservation
        +nd-button()._h30._md-fz15._black.__button.js-nd-popup(href="#nd-popup-arrange-viewing") Arrange viewing
